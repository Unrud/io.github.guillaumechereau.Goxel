{
  "id": "io.github.guillaumechereau.Goxel",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "1.6",
  "sdk": "org.freedesktop.Sdk",
  "command": "goxel",
  "rename-desktop-file": "goxel.desktop",
  "rename-icon": "goxel",
  "rename-appdata-file": "goxel.appdata.xml",
  "finish-args": [
    "--socket=pulseaudio",
    "--socket=wayland",
    "--socket=x11",
    "--share=ipc",
    "--device=dri",
    "--filesystem=home"
  ],
  "cleanup": [ "/lib/cmake" ],
  "modules": [
    {
      "name": "scons",
      "cleanup": [ "*" ],
      "buildsystem": "simple",
      "build-commands": [
        "python setup.py install --prefix=/app"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://downloads.sourceforge.net/project/scons/scons/2.5.1/scons-2.5.1.tar.gz",
          "sha256": "0b25218ae7b46a967db42f2a53721645b3d42874a65f9552ad16ce26d30f51f2"
        }
      ]
    },
    {
        "name": "glfw",
        "buildsystem": "cmake-ninja",
        "builddir": true,
        "config-opts": [
            "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
            "-DBUILD_SHARED_LIBS:BOOL=ON"
        ],
        "sources": [
            {
                "type": "archive",
                "url": "https://github.com/glfw/glfw/releases/download/3.2.1/glfw-3.2.1.zip",
                "sha256": "b7d55e13e07095119e7d5f6792586dd0849c9fcdd867d49a4a5ac31f982f7326"
            }
        ],
        "cleanup": [
            "/include",
            "/lib/pkgconfig"
        ]
    },
    {
      "name": "imagemagick",
      "sources": [
        {
          "type": "archive",
          "url": "https://www.imagemagick.org/download/releases/ImageMagick-7.0.6-10.tar.xz",
          "sha256": "5a9889c87dc351cf4b57ca3ae418c9cdcefc77aaa9a3b16044ae8a4eecf3aeed"
        }
      ],
      "cleanup": [
        "*"
      ]
    },
    {
      "name": "goxel",
      "buildsystem": "simple",
      "build-commands": [
        "make release",
        "install -Dm744 goxel /app/bin/goxel",
        "for size in 16 24 32 48 64 128 256; do
            convert -resize ${size}x${size} new-icon.png ${size}.png
            install -Dm644 ${size}.png /app/share/icons/hicolor/${size}x${size}/apps/goxel.png
        done",
        "install -Dm644 snap/gui/goxel.desktop /app/share/applications/goxel.desktop",
        "install -Dm644 goxel.appdata.xml /app/share/appdata/goxel.appdata.xml"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/guillaumechereau/goxel/archive/v0.7.3.tar.gz",
          "sha256": "56790d96d9d52d37765ac5c59f924c007885daaa6fb2129baea51dff5380c15c"
        },
        {
          "type": "file",
          "path": "goxel.appdata.xml"
        },
        {
          "type": "file",
          "path": "new-icon.png"
        }
      ]
    }
  ]
}
